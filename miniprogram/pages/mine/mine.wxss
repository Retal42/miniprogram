/* pages/login/login.wxss */
.bg{
    position:relative;
    align-items: center;
    height:100%;
    display: flex;
    flex-direction: column;
}
.bg-img{
    position: absolute;
    width:100%;
    height: 100%;
}
.login-container {
    height: 830rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: absolute;
    overflow: hidden;
    width: 80%;
    margin-top: 0rpx;
  }
  
  /* 图标的样式 */
  .contact-filled {
    width: 150rpx;
    margin-bottom: 16rpx;
  }

  /* 登录按钮的样式 */
  .btn-login {
    width: 75%;
    border-radius: 100px;
    margin: 15px 0;
    background-color: green;
    color: #f8f8f8;
    font-size: 40rpx;
  }
  
  /* 按钮下方提示消息的样式 */
  .tip-text {
    margin-top: 10rpx;
    height:100rpx;
    font-size: 35rpx;
    color: whitesmoke;
  }
/* 用户信息样式 */
.user{
    position:absolute;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.user-above{
    display: flex;
    flex-direction: row;
}
.experience{
    display: flex;
    flex-direction: column;
    font-size: 50rpx;
    color: white;
    align-items: center;
    margin-top: 100rpx;
}
.top-box {
    height: 400rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  
  /* 用户头像样式 */
  .top-box .avatar {
    display: block;
    width: 180rpx;
    height: 180rpx;
    border-radius: 45px;
    border: 2px solid white;
    box-shadow: 0 1px 5px black;
  }
  
  /* 用户昵称样式 */
  .top-box .nickname {
    color: white;
    font-weight: bold;
    font-size: 50rpx;
    margin-top: 20rpx;
  }
  
  /* 面板样式设置 */
  .panel {
    width: 80%;
    background-color: whitesmoke;
    border-radius: 3px;
  }
  
  .panel-list-item {
    height: 70rpx;
    width: 97%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 30rpx;
    padding-left:20rpx;
    margin-top: 10rpx;
    border-bottom: 3rpx solid gray;
  }
  .panel-list-item button{
      margin-left: 0rpx;
      margin-bottom: 10rpx;
      padding: 0;
      height: 70rpx;
      font-size: 30rpx;
      border: none;
  }
  .panel-list-item button::after{
    border:0;
  }
  /* 箭头样式 */
  .panel-list-item image {
    width: 50rpx;
    height: 40rpx;
  }
  .logout{
    width:70%;
    position: absolute;
    margin-top: 800rpx;
  }
  .btn-logout{
    width: 60%;
    border-radius: 100px;
    margin-top: 30rpx;
    background-color:#B22222;
    color: #f8f8f8;
    font-size: 40rpx;
  }
  .show-info{
    width: 60%;
    border-radius: 100px;
    background-color:green;
    color: #f8f8f8;
    font-size: 40rpx;
  }
page{
    height: 100%;
    width:100%;
}